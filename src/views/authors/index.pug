extends ../layout 

block content 
    h1= title
    if  authors.length
        ul
            each author in authors
                li 
                    a(href=author.url) #{author.firstName}, #{author.familyName}
                    |   - (#{author.dateOfBirth}) 
                    |   - (#{author.dateOfDeath})
    else 
        p #{t('authors.not_exist')}

extends ../layout

block content

    h1 #{title}: #{author.name}
    p= author.lifespan

    if authorBooks.length

        p #[strong #{t('author.delete_warning')}]
        div(style='margin-left:20px;margin-top:20px')
            h4 Books

        dl
            each book in authorBooks
                dt
                    a(href=book.url) #{book.title}
                dd #{book.summary}
    else
        p #{t('author.delete_confirm')}

        form(method='POST')
            div.form-group
                input#authorid.form-control(type='hidden', name='authorid', value=author._id )
            
            button.btn.btn-primary(type='submit') #{t('author.delete_button')}

extends ../layout
block content
    h1 #{title}

    form(method='POST' action='create')
        iv.form-group
            label(for='name') Title:
            input#name.form-control(type='text' placeholder='Name of book'
                name='title' required)
        iv.form-group        
            label(for='author') Author associate:
            select#name.form-control(type='text' placeholder='Rothfuss, Patrick etc.'
                name='author' required)
                    each author in authors
                        option(value=author.id) #{author.getFullName}
        iv.form-group
            label(for='summary') Summary:
            textarea#summary.form-control(placeholder='Summary' name='summary' required)
        iv.form-group
            label(for='isbn') ISBN:
            input#isbn.form-control(type='text' placeholder='ISBN13' name='isbn' required)
        iv.form-group
            label Genre associate:
            each genre in genres
                div
                    input(type='checkbox' name='genre' value=genre.id) 
                    label #{genre.name}

        button.btn.btn-primary(type='submit') Submit

    if errors
        ul
            for error in errors
                li!= error.msg
